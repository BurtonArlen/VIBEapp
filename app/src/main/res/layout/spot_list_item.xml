<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp">

    <ImageView
        android:layout_width="202dp"
        android:layout_height="155dp"
        android:id="@+id/spotImageView"
        android:src="@drawable/ico"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:id="@+id/ratingTextView"
                android:textColor="@color/colorAccent"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/categoryTextView"
                android:layout_alignStart="@+id/categoryTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One Cuisine Type"
                android:id="@+id/categoryTextView"
                android:textStyle="italic"
                android:layout_above="@+id/ratingTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spotNameTextView"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Spot Name"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/categoryTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
